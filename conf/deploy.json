{
  "defaultStacks": ["subscriptions"],
  "packages":{
      "ami-update": {
          "type": "ami-cloudformation-parameter",
          "apps": [ "frontend" ],
          "data": {
              "amiTags": {
                  "Recipe": "xenial-membership",
                  "AmigoStage": "PROD"
              },
              "amiParameter": "ImageId",
              "cloudFormationStackByTags": true
          }
      },
    "frontend":{
      "type":"autoscaling",
      "data":{
        "bucket": "subscriptions-dist"
      }
    }
  },
  "recipes":{
    "default":{
      "actionsBeforeApp": ["ami-update.update", "frontend.uploadArtifacts", "frontend.deploy"]
    },
    "artifactUploadOnly": {
      "actions": [ "frontend.uploadArtifacts" ]
    }
  }
}
