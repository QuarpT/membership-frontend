# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Editions homepage
GET         /                                controllers.Homepage.index
GET         /au                              controllers.Homepage.indexAu
GET         /us                              controllers.Homepage.indexUs

# Health check
GET         /healthcheck                     controllers.Healthcheck.index

# Digital pack
GET         /digital                         controllers.DigitalPack.uk
GET         /us/digital                      controllers.DigitalPack.us
GET         /au/digital                      controllers.DigitalPack.au
GET         /digital/country                 controllers.DigitalPack.selectCountry
POST        /digital/country                 controllers.DigitalPack.handleCountry

# Checkout
GET         /checkout                        controllers.Checkout.renderCheckout
POST        /checkout                        controllers.Checkout.handleCheckout
GET         /checkout/thankyou               controllers.Checkout.thankyou

# collection and delivery
GET         /collection/paper-digital        controllers.Shipping.collectionPaperDigital
POST        /collection/paper-digital        controllers.Shipping.collectionPaperDigital
GET         /collection/paper                controllers.Shipping.collectionPaper
POST        /collection/paper                controllers.Shipping.collectionPaper
GET         /delivery/paper-digital          controllers.Shipping.deliveryPaperDigital
POST        /delivery/paper-digital          controllers.Shipping.deliveryPaperDigital
GET         /delivery/paper                  controllers.Shipping.deliveryPaper
POST        /delivery/paper                  controllers.Shipping.deliveryPaper

# Staff signin (note, done by OAuth, in addition to regular signin)
GET         /staff/login                       controllers.OAuth.login
GET         /staff/loginAction                 controllers.OAuth.loginAction
GET         /oauth2callback                    controllers.OAuth.oauth2Callback

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                    controllers.Assets.at(path="/public", file)
